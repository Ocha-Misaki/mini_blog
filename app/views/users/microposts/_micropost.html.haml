%li
  %span.user
  ##以下の実装わかりにくい
  - if current_user == micropost.user
    = link_to current_user.name, user_profile_path
  - else
    = link_to micropost.user.name, user_path(micropost.user)
  %span.content
  = micropost.content
  %span.timestamp
    = time_ago_in_words(micropost.created_at) + '前'

- if current_user == micropost.user
  %span.detail
    = link_to '編集', edit_user_micropost_path(micropost)
    = button_to '削除', user_micropost_path(micropost), method: :delete
