%li
  %span.user
    = link_to current_user.name, user_path(current_user)
  %span.content
    = micropost.content
  %span.timestamp
    = time_ago_in_words(micropost.created_at) + '前'

- if current_user == micropost.user
  %span.detail
    = link_to '編集', edit_user_micropost_path(micropost)
    = button_to '削除', user_micropost_path(micropost), method: :delete
